<h2>Product List</h2>

<table id="product-table" border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Stock</th>
      <th>Price</th>
      <th>Category</th>
      <th>Eliminar</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{title}}</td>
      <td>{{stock}}</td>
      <td>${{price}}</td>
      <td>{{category}}</td>
      <td><button class="delete-product" data-id="{{id}}">Borrar</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>

<br />
<hr /><br />

<h2>Agregar Producto</h2>

<form id="create-product-form">
  <label for="product-title">Name</label>
  <br />
  <input type="text" id="product-title" name="title" />
  <br />
  <label for="product-price">Price</label>
  <br />
  <input type="number" id="product-price" name="price" />
  <br />
  <label for="product-price">Stock</label>
  <br />
  <input type="number" id="product-stock" name="stock" />
  <br />
  <label for="product-category">Category</label>
  <br />
  <input type="text" id="product-category" name="stock" />
  <br />
  <label for="product-description">Description</label>
  <br />
  <input type="text" id="product-description" name="description" />
  <br />
  <br />
  <button type="submit">Agregar</button>
</form>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>